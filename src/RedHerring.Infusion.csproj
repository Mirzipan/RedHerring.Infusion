<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <Title>Red Herring Infusion</Title>
        <Authors>Mirzipan</Authors>
        <LangVersion>10</LangVersion>
        <Description>Simple dependency injection for your game.</Description>
        <RepositoryUrl>https://github.com/Mirzipan/RedHerring.Infusion</RepositoryUrl>
        <Copyright>2023</Copyright>
        <PackageTags>Game, Injection, Dependency, IOC</PackageTags>    
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.MD</PackageReadmeFile>
        <PackageIcon>icon.png</PackageIcon>
        <Version>1.0.0</Version>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\README.MD" Pack="true" PackagePath="\"/>
        <None Include="..\icon.png" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
